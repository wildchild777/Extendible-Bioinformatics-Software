<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.WelcomeViewController">
    <children>
        <!-- VBox that fills the AnchorPane and centers its children -->
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0" 
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Welcome to Clustering Hub" textAlignment="CENTER">
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
                <Button fx:id="NextButton" text="Next" onAction="#changeView" />
            </children>
        </VBox>
    </children>
</AnchorPane>